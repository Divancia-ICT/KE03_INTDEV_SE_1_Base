@* @page
@model Bestellingplaatsen.Pages.WinkelwagenModel
@{
    ViewData["Title"] = "Winkelwagen";
}

<h2>Winkelwagen</h2>

<p>Hier zie je de producten die je hebt toegevoegd.</p>

@if (!Model.Items.Any())
{
    <p>Je winkelwagen is leeg.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Aantal</th>
                <th>Prijs</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Naam</td>
                    <td>@item.Aantal</td>
                    <td>€ @item.Product.Prijs.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Totaal:</strong> € @Model.TotaalPrijs.ToString("F2")</p>

    <form method="get" asp-page="/Betaling">
        <button type="submit" class="btn btn-success">Bestelling plaatsen</button>
    </form>
} 







